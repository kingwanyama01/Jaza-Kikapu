<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="AppTheme" parent="BaseTheme">
        <item name="colorPrimary">#118df0</item>
        <item name="colorPrimaryDark">#118df0</item>
        <item name="colorAccent">#2facff</item>
        <item name="android:windowTranslucentStatus" tools:ignore="NewApi">true</item>
        <item name="android:colorControlHighlight" tools:ignore="NewApi">@color/colorAccentLight</item>
        <item name="android:windowSharedElementsUseOverlay" tools:ignore="NewApi">false</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:windowAllowEnterTransitionOverlap" tools:ignore="NewApi">true</item>
        <item name="android:windowAllowReturnTransitionOverlap" tools:ignore="NewApi">true</item>
        <item name="android:windowSharedElementEnterTransition" tools:ignore="NewApi">@android:transition/move</item>
        <item name="android:windowSharedElementExitTransition" tools:ignore="NewApi" tools:targetApi="lollipop">@android:transition/move</item>
    </style>


    <style name="ProgressBar.Blue" parent="@style/AppTheme">
    <item name="colorPrimary">#2facff</item>
    <item name="colorAccent">#2facff</item>
    </style>

    <style name="AppTheme.Material" parent="BaseTheme.Material" />

    <style name="BaseTheme.Material" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange_600</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/blue_grey_600</item>
    </style>



    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/white</item>
    </style>

    <style name="TextAppearance.Medium.Bold" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


<style name="Checkbox.Blue" parent="@style/AppTheme">
    <item name="colorControlActivated">#2facff</item>
    <item name="colorControlHighlight">#2facff</item>
    <item name="colorControlNormal">#2facff</item>
</style>

<style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
    <item name="android:textColor">@color/colorPrimary</item>
</style>

<style name="EditText.Grey" parent="@style/AppTheme">
    <item name="colorControlActivated">@color/white</item>
    <item name="colorControlHighlight">@color/grey_60</item>
    <item name="colorControlNormal">@color/grey_40</item>
</style>

<style name="EditText.Flat.Grey" parent="@style/AppTheme">
    <item name="android:textColorHint">@color/grey_40</item>
    <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Subhead</item>
    <item name="android:textColor">@color/grey_90</item>
</style>



<style name="RippleStyleWhite">
    <item name="mrl_rippleOverlay">true</item>
    <item name="mrl_rippleColor">#80FFFFFF</item>
    <item name="mrl_rippleHover">true</item>
    <item name="mrl_rippleAlpha">0.2</item>
</style>

<style name="RippleStyleBlack" parent="RippleStyleWhite">
    <item name="mrl_rippleColor">@color/orange_600</item>
</style>

<style name="Toolbar.Light" parent="@style/AppTheme">
    <item name="colorControlNormal">@color/grey_60</item>
    <item name="android:textColorPrimary">@color/grey_60</item>
</style>

<style name="EditText.GreySoft" parent="@style/AppTheme">
    <item name="colorControlActivated">@color/grey_40</item>
    <item name="colorControlHighlight">@color/grey_40</item>
    <item name="colorControlNormal">@color/grey_20</item>
</style>


<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


<style name="Yellow.Small.AppCompatRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
    <item name="colorControlNormal">@color/grey_60</item>
    <item name="colorControlActivated">@color/yellow_600</item>
</style>

</resources>
